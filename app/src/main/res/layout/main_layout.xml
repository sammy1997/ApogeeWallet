<FrameLayout android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/overlayCard"
        android:layout_width="300dp"
        android:layout_height="380dp"
        android:layout_gravity="center"
        android:elevation="20dp"
        android:visibility="invisible"
        android:background="#fff">

        <Button
            android:layout_width="200dp"
            android:layout_height="32dp"
            android:background="@drawable/active_btn"
            android:textColor="#fff"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="320dp"
            android:textSize="25px"
            android:text="SHOW SUCCESS"
            android:id="@+id/show_success"/>


        <Button
            android:id="@+id/show_failed"
            android:layout_width="200dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="250dp"
            android:background="@drawable/active_btn"
            android:text="SHOW FAILED"
            android:textColor="#fff"
            android:textSize="25px" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="200dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="350dp"
            android:background="@drawable/active_btn"
            android:text="CANCEL"
            android:textColor="#fff"
            android:textSize="25px"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@drawable/menu_background"
        android:elevation="5dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/pay_receive"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="44dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:scaleX=".6"
                android:scaleY=".6"
                android:src="@drawable/pay_icon" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="37dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:scaleX=".7"
                android:scaleY=".7"
                android:src="@drawable/qr" />
        </RelativeLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/central"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/button_circle"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="32dp"
        android:elevation="15dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/food_icon"
        />

    <FrameLayout
        android:id="@+id/fragment"
        android:name="com.awesomecorp.sammy.apogeewallet.fragments.WalletHomeFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</FrameLayout>